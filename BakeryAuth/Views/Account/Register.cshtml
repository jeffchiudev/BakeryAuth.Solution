@{
    Layout = "_Layout";
}

@using BakeryAuth.ViewModels

@model RegisterViewModel

<h1>Create a Pierre's Bakery Account</h1>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <p>Account Email: @Html.TextBoxFor(user=> user.Email, new {style = "color:black;"})</p>
    <p>Enter Password: @Html.PasswordFor(user=> user.Password, new {style = "color:black;"})</p>
    <p>Confirm Password: @Html.PasswordFor(user=> user.ConfirmPassword, new {style = "color:black;"})</p>
    <input type="submit" value="Register" class="btn btn-primary" />
}
<hr />
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>