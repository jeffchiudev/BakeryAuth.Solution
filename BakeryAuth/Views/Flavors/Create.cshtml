@{
    Layout = "_Layout";
}

@model BakeryAuth.Models.Flavor

<h1>Create A New Flavor Profile</h1>
<hr />
@using (Html.BeginForm())
{
    <h3>Flavor Profile Name: @Html.TextBoxFor(model => model.FlavorName)</h3>
    <input type="submit" value="Add new flavor profile" class="btn btn-primary" />
}
<hr />
<p>@Html.ActionLink("Show all flavor profiles", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>