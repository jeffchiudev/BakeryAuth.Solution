@{
    Layout = "_Layout";
}

@using BakeryAuth.Models;
@model List<BakeryAuth.Models.Flavor>;

<h1>Flavor Profiles</h1>
<hr />
@if (@Model.Count == 0)
{
    <h3>No flavor profiles have been added</h3>
}

@foreach (Flavor flavor in Model)
{
    <h4>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</h4>
}
<hr />
@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add New Flavor Profile", "Create", null, null, new {@class="btn btn-primary"})</p>
}
else
{
    <h4>If you'd like to create a flavor profile, create an @Html.ActionLink("account here", "Register", "Account")</h4>
}
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>