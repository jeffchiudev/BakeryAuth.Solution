@{
    Layout = "_Layout";
}

@model BakeryAuth.Models.Treat

<h2>Add A Treat</h2>

<h4>Add a flavor profile to this treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select Flavor Profile:")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" class="btn btn-primary" />
}

<p>@Html.ActionLink("Back to Treat List", "Index", null, null, new {@class="btn btn-primary"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null, new {@class="btn btn-primary"})</p>